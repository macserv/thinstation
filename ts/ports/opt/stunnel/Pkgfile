name=stunnel
version=5.53
release=1
source=(https://www.stunnel.org/downloads/stunnel-$version.tar.gz)

build() {
	cd $name-$version

	./configure --prefix=/usr \
			--exec-prefix=/ \
			--sysconfdir=/etc \
			--mandir=/usr/man \
			--disable-extras

	make
	make DESTDIR=$PKG install
}
